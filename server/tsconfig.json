{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "noImplicitAny": false,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ]
  }